@model Blog161.ViewModel.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center">
    <div class="col-5">
        <form class="submit-form" method="post" enctype="multipart/form-data" asp-action="Register">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group row">
                <label asp-for="Nome" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Nome" type="text" class="form-control" placeholder="Nome" required>
                    <span asp-validation-for="Nome"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Email" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Email" type="email" class="form-control" placeholder="Email" required>
                    <span asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Username" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Username" type="tel" class="form-control" placeholder="User Name" required>
                    <span asp-validation-for="Username"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Senha" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Senha" type="password" class="form-control" placeholder="Password" required>
                    <span asp-validation-for="Senha"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Grupo" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-6">
                    <select asp-for="Grupo" class="form-control">
                        <option selected>Membro</option>
                        <option>Administrador</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-success">
                        Cadastrar
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}

